{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "singleQuote": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "trailingComma": "none",
    "jsxSingleQuote": true,
    "semi": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "types/*": [
        "types/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "store/*": [
        "store/*"
      ],
      "pages/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
